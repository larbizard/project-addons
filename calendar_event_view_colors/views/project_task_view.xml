<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_task_form2_inherit_calendar_color" model="ir.ui.view">
        <field name="name">project.task.form.inherit.calendar.color</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <field name="tag_ids" position="after">
                <field name="category_id"/>
                <field name="color" widget="color" readonly="1"/>
                <field name="font_color" invisible="1"/>
            </field>
        </field>
    </record>
    <record model="ir.ui.view" id="project_task_inherit_calendar_color">
        <field name="name">project.task.inherit.calendar.color</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_calendar"/>
        <field name="arch" type="xml">
            <xpath expr="//calendar" position="attributes">
                <attribute name="js_class">calendar_colour</attribute>
                <attribute name="color">category_id</attribute>
            </xpath>
        </field>
    </record>
</odoo>
